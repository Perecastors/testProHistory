# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       Application.index
GET     /search                                 Application.search
GET     /searchNoFilter                         Application.searchNoFilter
GET     /createProGame                          FormController.createProGame
POST    /createProGame                          FormController.saveProGame
POST    /confirmProGame                         FormController.confirmProGame


#Route Aurelien
GET    /ajouterChampion                         ChampionsController.create(ligne,preference,nombreChampions)
GET    /ajouterChampionAdverse                  ChampionsController.createAdverse(ligne,preference,nombreChampions)
POST   /ajouterChampion                         ChampionsController.save
POST   /ajouterChampionAdverse                  ChampionsController.saveAdverse
GET    /liste                                   ChampionsController.afficher
GET    /deleteChampion                          ChampionsController.delete(id)
GET    /deleteChampionAdverse                   ChampionsController.deleteAdverse(id)
POST   /changementPref                          ChampionsController.changementPreference
POST   /test                                    ChampionsController.test2
GET    /pref-cont                               ChampionsController.gestionPrefCont
POST   /pref-cont                               ChampionsController.ajouterPref


# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
*       /{controller}/{action}                  {controller}.{action}
